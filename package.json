{
  "name": "vscode-nupkg",
  "displayName": "Nuget NuPkg viewer",
  "description": "Display all information from a NuPkg file",
  "version": "0.0.1",
  "publisher": "eridem",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.preview"
  ],
  "icon": "icon.svg",
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "nupkg",
        "aliases": [
          "NuPkg",
          "nupkg"
        ],
        "extensions": [
          ".nupkg"
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.preview",
        "title": "Preview NuPkg contents",
        "icon": {
          "light": "./images/menu-light.svg",
          "dark": "./images/menu-dark.svg"
        },
        "category": "NuPkg"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.preview",
          "alt": "extension.preview",
          "group": "navigation",
          "when": "resourceLangId == nupkg"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.preview",
          "alt": "extension.preview",
          "group": "navigation",
          "when": "resourceLangId == nupkg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "adm-zip": "^0.4.7",
    "js-yaml": "^3.6.1",
    "shelljs": "^0.7.5",
    "smart-nupkg-metadata-reader": "^1.0.0"
  }
}